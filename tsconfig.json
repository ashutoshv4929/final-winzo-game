{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib": ["es2018", "dom"],
    "outDir": "./build",                // compiled JS files here
    "rootDir": "./src",                 // all TS files must be inside src/
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,     // required for Colyseus @type
    "emitDecoratorMetadata": true       // required for Colyseus schema
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}

